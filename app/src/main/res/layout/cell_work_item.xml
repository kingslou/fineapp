<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/btn_work_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/work_item_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_work_icon"
            android:layout_width="@dimen/dimen_image_xheight"
            android:layout_height="@dimen/dimen_image_xwidth"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_space_10" />

        <TextView
            android:id="@+id/text_work_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/color_label_black"
            android:textSize="@dimen/dimen_label_text" />
    </LinearLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Toolbar">

    <ImageView
        android:id="@+id/btn_toolbar_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_space_7"
        android:padding="@dimen/margin_space_5"
        android:src="@drawable/drawable_icon_back" />

    <TextView
        android:id="@+id/txt_navigate_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_toolbar_back"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_space_3"
        android:layout_marginRight="60dp"
        android:layout_toRightOf="@+id/btn_toolbar_back"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/color_label_white"
        android:textSize="@dimen/dimen_label_text" />

    <TextView
        android:id="@+id/txt_right_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_space_10"
        android:textColor="@color/color_label_white"
        android:textSize="@dimen/dimen_label_text" />
</RelativeLayout>
